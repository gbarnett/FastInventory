<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastInventory.MainPage">

    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*"
          RowDefinitions="*,*,*,*,*,*">

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="MC3300 Scanner"
                    HorizontalOptions="Center"
                    FontSize="16"
                    Margin="0"
                    FontAttributes="Bold"/>
                <Image Source="mc3000_scanner.jpg"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="Start"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="3" Grid.Row="0" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="ZQ630 Printer"
                    FontSize="16"
                    Margin="2"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>
                <Image Source="zq630_printer.jpg" Aspect="Fill"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="End"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="5" Grid.Row="0" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="HP G6"
                    FontSize="16"
                    Margin="2"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>
                <Image Source="hpelitebookg6laptop.jpg" MinimumHeightRequest="150"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="End"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="7" Grid.Row="0" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="HP G7"
                    FontSize="16"
                    Margin="2"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>
                <Image Source="hpelitebookg6laptop.jpg" MinimumHeightRequest="150"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="End"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="Lenovo Laptop"
                    HorizontalOptions="Center"
                    FontSize="16"
                    Margin="0"
                    FontAttributes="Bold"/>
                <Image Source="mc3000_scanner.jpg"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="Start"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="3" Grid.Row="3" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="Thin Client"
                    FontSize="16"
                    Margin="2"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>
                <Image Source="thinclient.jpg" />
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="End"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="5" Grid.Row="3" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="ZD 620"
                    FontSize="16"
                    Margin="2"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>
                <Image Source="zd620printer.jpg" MaximumHeightRequest="150"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="End"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>

        <Border Grid.Column="7" Grid.Row="3" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Padding="25">
            <StackLayout>
                <Label
                    Text="Security Key"
                    FontSize="16"
                    Margin="2"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>
                <Image Source="hpelitebookg6laptop.jpg" MinimumHeightRequest="150"/>
                <Button
                    Text="Add"
                    Margin="12"
                    MaximumWidthRequest="150"
                    MaximumHeightRequest="17"
                    VerticalOptions="End"/>
                <Label
                    Text="Count"
                    FontSize="16"
                    HorizontalOptions="Center"/>
            </StackLayout>
        </Border>
    </Grid>

</ContentPage>
